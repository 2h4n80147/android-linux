<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/bottom_sheet_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поиск"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Город "
            android:textSize="@dimen/reg_text_dimensions"

            />
        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/city"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Пол"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/SexListChoice"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стоимость"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Минимальная стоимость"
            />
        <SeekBar
            android:id="@+id/filter_mincost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Максимальная стоимость"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:isb_max="10000"
            app:isb_min="0"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_ticks_count="3"
            app:isb_show_tick_marks_type="circle"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"

            app:isb_tick_texts_color="@color/black"
            app:isb_thumb_color="@color/black"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/black"
            app:isb_indicator_text_color="@color/black"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/black"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/black"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>

    </LinearLayout>
    <Button
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать результаты"

        android:background="@drawable/blue_rounded_button"
        />






</LinearLayout>